<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5e5e5e5"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002">


        <TableLayout
            android:id="@+id/main_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/header_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="bottom-UP"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="top-down"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="free"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="3dp"
                    android:text="N"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

            </TableRow>

            <TableRow
                android:id="@+id/ones_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="1's"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />


            </TableRow>

            <TableRow
                android:id="@+id/twos_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="2's"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />


            </TableRow>

            <TableRow
                android:id="@+id/threes_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="3's"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />


            </TableRow>

            <TableRow
                android:id="@+id/fours_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="4's"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/fives_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="5's"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/sixes_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="6's"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/max_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Min"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/min_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Max"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/s_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/f_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="F"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/p_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="P"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/y_row"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="Y"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

        </TableLayout>

        <Space
            android:layout_width="78dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go" />

                    <Button
                        android:id="@+id/btn_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="reset" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="21dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dice3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/r_q" />

                        <ImageView
                            android:id="@+id/dice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/r_q" />

                        <ImageView
                            android:id="@+id/dice4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/r_q" />

                        <ImageView
                            android:id="@+id/dice5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/r_q" />

                        <ImageView
                            android:id="@+id/dice6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/r_q" />

                        <ImageView
                            android:id="@+id/dice2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/r_q" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#E635C85B"
                            android:gravity="center_horizontal"
                            android:text="Total"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/total_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#E635C85B"
                            android:gravity="center_horizontal"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/view_scores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Scores" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>